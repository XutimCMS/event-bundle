{% extends '@XutimCore/admin/modalBase.html.twig' %}
{% import '@XutimCore/admin/common/forms.html.twig' as forms %}
{% set title = 'edit page'|trans({}, 'admin')|capitalize %}

{% block pageTitle %}
    {{ title }}
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header p-3">
            <h3 class="card-title">{{ title }}</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_row(form.page) }}
            {{ form_row(form.submit) }}
            {{ form_row(form._token) }}
            {{ form_end(form, {render_rest: false}) }}
        </div>
    </div>
{% endblock %}

{% block stream_success %}
    <turbo-stream action="replace" targets="#event-page-item">
        <template>
            <span id="event-page-item">
                {% if event.page is not null %}
                    {{
                        event.page.translationByLocaleOrAny(content_context_language()).title
                    }}
                {% endif %}
            </span>
        </template>
    </turbo-stream>
{% endblock %}

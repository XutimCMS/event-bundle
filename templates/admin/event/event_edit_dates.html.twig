{% extends '@XutimCore/admin/modalBase.html.twig' %}
{% import '@XutimCore/admin/common/forms.html.twig' as forms %}
{% set title = 'edit dates'|trans({}, 'admin')|capitalize %}

{% block pageTitle %}
    {{ title }}
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header p-3">
            <h3 class="card-title">{{ title }}</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_row(form.startsAt) }}
            {{ form_row(form.endsAt) }}
            {{ form_row(form.submit) }}
            {{ form_row(form._token) }}
            {{ form_end(form, {render_rest: false}) }}
        </div>
    </div>
{% endblock %}

{% block stream_success %}
    <turbo-stream action="replace" targets="#event-starts-at-item">
        <template>
            <span id="event-starts-at-item">{{
                event.startsAt|date('d/m/Y H:i')
            }}</span>
        </template>
    </turbo-stream>

    <turbo-stream action="replace" targets="#event-ends-at-item">
        <template>
            <span id="event-ends-at-item">{{
                event.endsAt|date('d/m/Y H:i')
            }}</span>
        </template>
    </turbo-stream>
{% endblock %}
